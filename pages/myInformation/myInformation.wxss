/* pages/myInformation/myInformation.wxss */
/**展示信息的样式**/
.bodyInfo{
  background-color: #f7f7f7;
}

.blank{
  background-color: #db2929ec;
  width: 100%;
  height: 5%;
}

.headIcon{
  width: 100%;
  height: 30%;
  margin: 2% 0% 0% 0%;
  background-color: #f7f7f7;
  border-bottom: 1rpx solid #b8b5b5;
}

.head-icon{
  width: 100rpx; 
  height: 100rpx;
  background-color: #f7f7f7;
  padding: 2% 0% 2% 2%;
}

.icon-size{
  width: 100rpx; 
  height: 100rpx;
  padding: 2% 0% 2% 2%;
}

.nickname{
  width: 10%;
  height: 2%;
  position: absolute;
  top: 2%;
  bottom: 0%;
  right: 0%;
  left: 23%;
  background-color: #f7f7f7;
}

.phoneText{
  width: 50%;
  height: 4%;
  position: absolute;
  top: 7%;
  bottom: 0%;
  right: 0%;
  left: 23%;
  background-color: #f7f7f7;
}

.showPnone{
  width: 50%;
  height: 4%;
  position: absolute;
  top: 7%;
  bottom: 0%;
  right: 0%;
  left: 45%;
  background-color: #f7f7f7;
}


.sex{
  background-color: #f7f7f7;
  width: 100%;
  height: 30%;
  position: absolute;
  top: 12.5%;
}

.sexText{
  font-size: 42rpx;
  color: rgb(14, 6, 4);
  padding: 0px;
  height:15%;
  width: 95%;
  line-height: 30rpx;
  margin: 4% 0rpx 0rpx 2%;
  display: table;
  float: left;
}

.sexValue{
  float: right;
  height:15%;
  margin: 0% 1% 0% 0%;
}

.line1{
  border-top: 1rpx solid #b8b5b5;
  position: absolute;
  top:20%;
  width: 100%;
  height: 1rpx;
}

.country{
  background-color: #f7f7f7;
  width: 100%;
  height: 8%;
  position: absolute;
  top: 21%;
}

.countryText{
  font-size: 42rpx;
  color: rgb(14, 6, 4);
  height:8%;
  width: 95%;
  line-height: 30rpx;
  margin: 4% 0rpx 0rpx 2%;
  display: table;
  float: left;
}

.countryValue{
  float: right;
  height:15%;
  display: block;
}

.line2{
  border-top: 1rpx solid #b8b5b5;
  position: absolute;
  top:28%;
  width: 100%;
  height: 1rpx;
}

.province{
  background-color: #f7f7f7;
  width: 100%;
  height: 8%;
  position: absolute;
  top: 29%;
}

.provinceText{
  font-size: 42rpx;
  color: rgb(14, 6, 4);
  height:8%;
  width: 95%;
  line-height: 30rpx;
  margin: 4% 0rpx 0rpx 2%;
  display: table;
  float: left;
}

.provinceValue{
  float: right;
  height:15%;
}

.line3{
  border-top: 1rpx solid #b8b5b5;
  position: absolute;
  top:36%;
  width: 100%;
  height: 1rpx;
}

.city{
  background-color: #f7f7f7;
  width: 100%;
  height: 8%;
  position: absolute;
  top: 37%;
  margin: 0rpx;
}

.cityText{
  font-size: 42rpx;
  color: rgb(14, 6, 4);
